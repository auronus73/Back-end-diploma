@model IEnumerable<WebApplication2.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Students</title>
@Styles.Render("~/Content/css")
</head>
<body>
    <div class="container">
        <h3>Список студентов</h3>
         <a style="text-align:right", href="CreateStudent/">Добавить студента</a>   
        <table class="table table-striped">
            <tr>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Группа</th>
                <th>Действия</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.patronymic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.group)
                    </td>
                    <td>
                        <p>
                            <a style="margin-bottom: 0px; background: transparent",  href="EditStudent/@item.student_id">Изменить</a>
                            <a style="margin-bottom: 0px; margin-top: 0px; background: transparent",  href="/Students/DeleteStudent/@item.student_id"></a>
                        </p>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
